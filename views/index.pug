extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 #{title}

                    form(method='POST' action='/article')
                        div.form-group
                            label(for='name') Name:
                            input#name.form-control(type='file', placeholder='Article name' name='file')
                        div.form-group
                            label(for='type') Type:
                            input#type.form-control(type='text', placeholder='Article type' name='type')
                        button.btn.btn-primary(type='submit') Add Article




